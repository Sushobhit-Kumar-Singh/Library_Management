@model Library_Management_Application.Models.Register
@{
	ViewData["Title"] = "Sign Up Page";
}

<h2>Sign Up</h2>



<form asp-controller="Auth" asp-action="SignUp" method="post">
	<div>
		<label asp-for="Name">Name:</label>
		<input asp-for="Name" class="form-control" required />
		<span asp-validation-for="Name" class="text-danger"></span>
	</div>
	<div>
		<label asp-for="Address">Address:</label>
		<input asp-for="Address" class="form-control" required />
		<span asp-validation-for="Address" class="text-danger"></span>
	</div>
	<div>
		<label asp-for="PhoneNumber">Phone Number:</label>
		<input asp-for="PhoneNumber" class="form-control" required />
		<span asp-validation-for="PhoneNumber" class="text-danger"></span>
	</div>
	<div>
		<label asp-for="EMail">Email:</label>
		<input asp-for="EMail" class="form-control" required />
		<span asp-validation-for="EMail" class="text-danger"></span>
	</div>
	<div>
		<label asp-for="Password">Password:</label>
		<input asp-for="Password" type="password" class="form-control" required />
		<span asp-validation-for="Password" class="text-danger"></span>
	</div>
	<button type="submit" class="btn btn-primary">Sign Up</button>
</form>

<p>If you already have an account, <a href="@Url.Action("SignIn", "Auth")">sign in here</a>.</p>


@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}
